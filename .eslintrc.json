{
  "extends": [
    "airbnb-base"
  ],
  "parserOptions": {
    "parser": "babel-eslint",
    "ecmaVersion": 2018
  },
  "rules": {
    "no-plusplus" : ["error", { "allowForLoopAfterthoughts": true }],
    "max-len": ["error", { "ignorePattern": "<path(.*?)/>", "code": 120 }],
    "linebreak-style": "off", // fuck you Â© windows
    "no-underscore-dangle": "off"
  }
}
